{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@yourAlias/*": ["apps/your-app/src/*"], // For apps
      "@libs/*": ["libs/*"], // For libs or shared folders
      "@components/*": ["libs/components/src/*"], // Example for components in a shared library
      "@services/*": ["apps/your-app/src/app/services/*"] // Example for services in a specific app
    }
  },
  "exclude": ["node_modules", "tmp"]
}
